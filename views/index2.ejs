<!-- Define a function to render each recipe -->
<% function renderRecipe(recipe) { %>
  <div class="item-preview">
    <a href="/single-recipe/<%= recipe._id %>">
      <h2>Title: <%= recipe.title %></h2>
      <p>Description: <%= recipe.description %></p>
      <!-- If createdBy field is available, you can display the creator -->
      <% if (recipe.createdBy) { %>
        <p>Created by: <%= recipe.createdBy.username %></p>
      <% } %>
    </a>
  </div>
  <% } %>
  
  <!DOCTYPE html>
  <html lang="en">
    <!-- Pass a JavaScript variable to a partial in EJS -->
    <%- include('partials/head.ejs', { title: "Home page" }) %>
  
    <body>
      <%- include('partials/navbar.ejs') %>
      <%- include('partials/hero.ejs') %>
      <div class="content">
        <div class="home">
          <div class="item-list">
            <% if (recipes.length > 0) { %>
            <!-- Call the renderRecipe function for each recipe -->
            <% recipes.forEach(renderRecipe); %> 
            <% } else { %>
            <p>No recipes found.</p>
            <% } %>
          </div>
        </div>
      </div>
      <%- include('partials/ads.ejs') %>
      <%- include('partials/footer.ejs') %>
    </body>
  </html>