<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Update page" }) %>

  <body>
    <%- include('partials/navbar.ejs') %>
   <!--Content Start-->
  

  <!-- ##### Contact Form Area Start ##### -->
  <div class="contact-area section-padding-0-80">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section-heading">
                    <h3>Add a New Recipe</h3>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="contact-form-area">
                    <form action="/single-recipe/<%= recipe._id %>?_method=PUT" method="POST">
                        <div class="row">

                            <div class="col-12 col-lg-3">

                            </div>
                            <div class="col-12 col-lg-6">
                                <div class="row">

                                    <div class="col-12 col-lg-12">  
                                        <label for="title">Title</label>
                                        <input type="text"  value="<%= recipe.title %>"  class="form-control" name="title" id="title" placeholder="Title" required>
                                        <br>
                                        <label for="description">Description</label>
                                        <input type="textarea" class="form-control" value="<%= recipe.description %>" name="description" rows="4" id="description" placeholder="Description" required >
                                        <!-- <textarea rows="4" cols="50" maxlength="50" class="form-control" name="description" id="description"  placeholder="Description">
                                            </textarea> -->
                                        <br>
                                        <label for="ingredients">Ingredients</label>      
                                        <textarea rows="4" cols="50" class="form-control"  name="ingredients" id="ingredients"  placeholder="Ingredients" required><%= recipe.ingredients.join("\n") %></textarea>
                                        </textarea>
                                        <br>  
                                        <label for="instructions">Instructions</label>    
                                     <textarea rows="4" cols="50"  class="form-control" name="instructions" id="instructions"  placeholder="Instructions" required><%= recipe.instructions %></textarea>
                                        </textarea>
                                        <br>
                                        <label for="imageUrl">ImageUrl</label>      
                                        <input type="text" class="form-control" name="imageUrl" value="<%= recipe.imageUrl %>" id="imageUrl" placeholder="Image" required>
                                        <br>

                                             
                                    </div>
                                    
                                    <div class="col-1 col-lg-1"> 
                                        
                                        <label for="achieved">Achieved:</label> 
                                        </div>
                                        <div class="col-3 col-lg-3">  
                                            
        <input type="checkbox" id="achieved" class="form-control" name="achieved" <% if (recipe.achieved) { %>checked<% } %> />
                                        </div>

                                </div>

                                <button class="btn delicious-btn mt-30" type="submit">Update</button>
                            </div>

                            <div class="col-12 col-lg-3">

                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Contact Form Area End ##### -->

   <!--Content End-->
    <%- include('partials/footer.ejs') %>
  </body>
</html>


